{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "MAIN: Build project",
            "program": "${workspaceFolder}/bin/Debug/navsos",
            "args": [ // If there is a space in the option, VSCode automatically encloses the option in '...'
                "-fconfig.ini",
                "-l",
                "flow/Default.flow",
                // "--nogui",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "C++ Debug Tests (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "TEST: Build project",
            "program": "${workspaceFolder}/bin/Debug/tests",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug/test",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}