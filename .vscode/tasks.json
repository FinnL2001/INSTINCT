        { // CLEAN: Remove Build Files
            "label": "CLEAN: Remove Build Files",
            "type": "shell",
            "group": "build",
            "command": "rm",
            "args": [
                "-rf",
                "build",
            ],
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Recurse",
                    "build",
                ]
            },
            "presentation": {
                "reveal": "never",
                "echo": false,
                "showReuseMessage": false,
            },
            "problemMatcher": [],
        },
        { // CLEAN: Tests
            "label": "CLEAN: Tests",
            "type": "shell",
            "group": "build",
            "command": "rm",
            "args": [
                "-rf",
                "test/logs/[^\\.]*",
