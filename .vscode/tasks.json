        { // CMAKE: Configure
            "label": "CMAKE: Configure",
            "type": "shell",
            "group": "build",
            "command": "ccmake",
            "args": [
                "-Bbuild/${input:buildType}-${input:compiler}",
                "-S.",
                "-DCMAKE_BUILD_TYPE=${input:buildType}",
            ],
            "options": {
                "env": {
                    "CC": "/usr/bin/clang",
                    "CXX": "/usr/bin/clang++",
                }
            },
            "presentation": {
                "focus": true
            },
            "dependsOn": [
                "CMAKE: Main",
            ],
            "problemMatcher": [],
